# ===================== BACKEND API CONFIGURATION =====================
# Địa chỉ backend API lúc phát triển local
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# API timeout settings
VITE_API_TIMEOUT=30000
# API timeout: 30 seconds (30 * 1000 ms)

# API retry configuration
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000
# Retry delay: 1 second (1000 ms)


# ===================== SOCKET.IO CONFIGURATION =====================
# Địa chỉ Socket.IO backend lúc phát triển local
VITE_SOCKET_URL=http://localhost:5000

# Socket.IO specific settings
VITE_SOCKET_PATH=/socket.io
VITE_SOCKET_TRANSPORTS=websocket,polling
VITE_SOCKET_TIMEOUT=20000
# Socket timeout: 20 seconds

# Socket namespaces
VITE_SOCKET_CHAT_NAMESPACE=/chat
VITE_SOCKET_STORY_NAMESPACE=/stories
VITE_SOCKET_NOTIFICATION_NAMESPACE=/notifications


# ===================== AUTHENTICATION CONFIGURATION =====================
# JWT token storage settings
VITE_TOKEN_STORAGE_KEY=hyteam_token
VITE_REFRESH_TOKEN_KEY=hyteam_refresh_token
VITE_USER_STORAGE_KEY=hyteam_user

# Token expiry settings
VITE_TOKEN_EXPIRY_BUFFER=300000
# Token refresh buffer: 5 minutes before expiry (5 * 60 * 1000 ms)

# Session timeout
VITE_SESSION_TIMEOUT=3600000
# Session timeout: 1 hour (60 * 60 * 1000 ms)


# ===================== FILE UPLOAD CONFIGURATION =====================
# Upload size limits
VITE_MAX_FILE_SIZE=52428800
# Max file size: 50MB (50 * 1024 * 1024 bytes) for posts

VITE_STORY_MAX_FILE_SIZE=10485760
# Story max file size: 10MB (10 * 1024 * 1024 bytes)

VITE_AVATAR_MAX_FILE_SIZE=5242880
# Avatar max file size: 5MB (5 * 1024 * 1024 bytes)

# Supported file types
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp,image/bmp
VITE_ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime,video/avi,video/mov

# Upload chunk size for large files
VITE_UPLOAD_CHUNK_SIZE=1048576
# Chunk size: 1MB (1024 * 1024 bytes)


# ===================== POST CONFIGURATION =====================
# Post specific settings
VITE_POST_CAPTION_MAX_LENGTH=2200
VITE_POST_COMMENT_MAX_LENGTH=500
VITE_POST_TAGS_MAX_COUNT=30

# Post pagination
VITE_POSTS_PER_PAGE=20
VITE_USER_POSTS_PER_PAGE=12

# Post cache settings
VITE_POST_CACHE_DURATION=300000
# Post cache: 5 minutes (5 * 60 * 1000 ms)

# Auto-refresh settings
VITE_AUTO_REFRESH_INTERVAL=600000
# Auto refresh: 10 minutes (10 * 60 * 1000 ms)


# ===================== SEARCH CONFIGURATION =====================
# Search settings
VITE_SEARCH_MIN_LENGTH=2
VITE_SEARCH_MAX_LENGTH=100
VITE_SEARCH_DEBOUNCE_DELAY=500
# Search debounce: 500ms

# Search results
VITE_SEARCH_RESULTS_LIMIT=50
VITE_SEARCH_CACHE_DURATION=180000
# Search cache: 3 minutes (3 * 60 * 1000 ms)


# ===================== STORY CONFIGURATION =====================
# Story specific settings
VITE_STORY_DURATION=86400000
# Story duration: 24 hours (24 * 60 * 60 * 1000 ms)

VITE_STORY_AUTO_ADVANCE=5000
# Story auto advance: 5 seconds (5000 ms)

VITE_STORY_CACHE_DURATION=300000
# Story cache: 5 minutes


# ===================== UI/UX CONFIGURATION =====================
# Animation settings
VITE_ANIMATION_DURATION=300
# Animation duration: 300ms

VITE_LOADING_DELAY=500
# Loading indicator delay: 500ms

# Infinite scroll settings
VITE_INFINITE_SCROLL_THRESHOLD=200
# Trigger load more when 200px from bottom

VITE_LAZY_LOAD_OFFSET=50
# Lazy load images 50px before entering viewport

# Notification settings
VITE_NOTIFICATION_DURATION=5000
# Notification display: 5 seconds

VITE_TOAST_POSITION=top-right
# Toast notification position


# ===================== PERFORMANCE CONFIGURATION =====================
# Image optimization
VITE_IMAGE_QUALITY=85
# Image compression quality (1-100)

VITE_THUMBNAIL_SIZE=300
# Thumbnail size in pixels

VITE_LAZY_LOADING=true
# Enable lazy loading for images

# Caching strategy
VITE_CACHE_STRATEGY=cache-first
# Options: cache-first, network-first, stale-while-revalidate

VITE_SERVICE_WORKER_ENABLED=false
# Enable service worker for offline functionality

# Bundle optimization
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
# Chunk size warning limit in KB


# ===================== ERROR HANDLING CONFIGURATION =====================
# Error reporting
VITE_ERROR_REPORTING_ENABLED=true
VITE_CONSOLE_ERRORS_ENABLED=true

# Retry configuration
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_BACKOFF_FACTOR=2
VITE_INITIAL_RETRY_DELAY=1000

# Fallback settings
VITE_FALLBACK_IMAGE=/images/placeholder.jpg
VITE_FALLBACK_AVATAR=/images/default-avatar.png

# Error boundaries
VITE_ERROR_BOUNDARY_ENABLED=true
VITE_ERROR_RECOVERY_TIMEOUT=5000


# ===================== DEVELOPMENT CONFIGURATION =====================
# Development mode settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true
VITE_CONSOLE_LOGS=true

# Hot reload settings
VITE_HMR_ENABLED=true
VITE_HMR_PORT=3000

# Development tools
VITE_REACT_DEVTOOLS=true
VITE_REDUX_DEVTOOLS=false

# Mock data settings
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY=1000

# Feature flags for development
VITE_FEATURE_POSTS=true
VITE_FEATURE_STORIES=true
VITE_FEATURE_SEARCH=true
VITE_FEATURE_REAL_TIME=true


# ===================== SECURITY CONFIGURATION =====================
# CORS settings
VITE_CORS_CREDENTIALS=true

# Content Security Policy
VITE_CSP_ENABLED=false
# Enable in production

# Rate limiting client-side
VITE_CLIENT_RATE_LIMIT=100
VITE_CLIENT_RATE_WINDOW=60000
# Client rate limit: 100 requests per minute

# XSS protection
VITE_XSS_PROTECTION=true

# Input validation
VITE_STRICT_VALIDATION=true


