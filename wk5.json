    {
      "parameters": {
        "jsCode": "const items = $input.all().map(item => item.json.items).flat();\n\n// Thông tin công ty\nconst companyInfo = {\n  name: 'CÔNG TY TNHH CÔNG NGHỆ INDEX',\n  address: 'Số 8D- Phố An Hòa, P.Mộ Lao, Hà Đông, Hà Nội, Việt Nam',\n  phone: '+84 4 6294 2886',\n  fax: '+84 4 6294 2886',\n};\n\n// Map dữ liệu sản phẩm + chuẩn bị tính tổng\nconst products = items.map((item, index) => {\n  const giaVeKho = parseFloat(item.json['GIÁ VỀ KHO'] || '0') || 0;\n\n  return {\n    stt: index + 1,\n    tenHang: item.json['Tên hàng'] || '',\n    moTa: item.json['Mô tả'] || '',\n    maHang: item.json['Mã hàng'] || '',\n    xuatXu: item.json['Xuất xứ'] || '',\n    maker: item.json['Maker'] || '',\n    soLuong: item.json['Số lượng'] || '',\n    donVi: item.json['Đơn vị'] || '',\n    donGia: giaVeKho,\n    thanhTien: giaVeKho,\n    thoiGianGiaoHang: item.json['LEADTIME'] || '',\n    note: item.json['NOTES']\n  };\n});\n\n// Tính tổng thành tiền\nconst totalUSD = products.reduce((sum, item) => sum + item.thanhTien, 0);\n\n// Thông tin báo giá\nconst quotationData = {\n  quotationNumber: 'BG-' + new Date().getTime(),\n  date: new Date().toLocaleDateString('vi-VN'),\n  validityDate: new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toLocaleDateString('vi-VN'),\n  requestedBy: 'BROTHER',\n  customer: 'BRO',\n  items: products,\n  totalUSD: totalUSD.toFixed(2), // Làm tròn 2 số thập phân\n  exchangeRate: '25,150',\n  deliveryTerms: 'At your Factory',\n  customsTerms: 'Giá trên đã bao gồm thủ tục mở hải quan 1 đầu xuất',\n  paymentTerms: '100% at the end of month after receiving the goods.',\n  goodsQuality: 'Đối với đơn hàng đã đặt, giá và giao hàng cố định.',\n  otherNotes: 'Các điều khoản khác theo hợp đồng.'\n};\n\nreturn [{ json: { companyInfo, quotationData } }];\n"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        -60,
        260
      ],
